  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous" />
  <title>Search - Actor</title>
</head>

<body>
  <div class="container">
    <div>
      <form method="POST" action="/api/search/movies">
        <div class="mb-3">
          <label for="actor" class="form-label">Actor name:</label>
          <input name="actor" type="text" class="form-control" id="actor" />
        </div>
        <button type="submit" class="btn btn-primary">Search movies</button>
      </form>
    </div>
    <div class="container text-center">
      <h1>Search movies of actor:</h1>
    </div>
    <div>
      <% if (notFound) { %>
      <h6>No movies found for given actor in the database!</hÂ§>
        <% } else {%>
        <div>
          <ul class="list-group">
            <% movies.forEach(function(arr) { %>
            <%arr.forEach(function(movie) { %>
            <li class="list-group-item"><%= movie %></li>
            <% }); %>
            <% }); %>
          </ul>
        </div>
        <% } %>
    </div>

    <div class="mt-5">
      <button type="button" class="btn btn-dark">
        <a style="
              color: white;
              text-decoration: none !important;
              cursor: pointer;
            " href="/api/search/actors">Search movies of actor</a>
      </button>
    </div>
  </div>
</body>

</html>